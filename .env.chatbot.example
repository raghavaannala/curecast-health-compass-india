# Multilingual AI Chatbot Configuration
# Copy this file to .env and fill in your actual values

# WhatsApp Business API Configuration
REACT_APP_WHATSAPP_API_URL=https://graph.facebook.com/v18.0
REACT_APP_WHATSAPP_ACCESS_TOKEN=your_whatsapp_business_api_token
REACT_APP_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
REACT_APP_WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token

# SMS Gateway Configuration (Twilio example - adapt for Indian providers)
REACT_APP_SMS_API_URL=https://api.twilio.com/2010-04-01
REACT_APP_SMS_API_KEY=your_sms_api_key
REACT_APP_TWILIO_ACCOUNT_SID=your_twilio_account_sid
REACT_APP_SMS_SENDER_ID=HEALTH

# Alternative Indian SMS Providers
# TextLocal: https://api.textlocal.in/send/
# MSG91: https://api.msg91.com/api/v5/flow/
# Fast2SMS: https://www.fast2sms.com/dev/bulkV2

# Google Translate API (Optional - for better translation)
REACT_APP_GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key

# Government Health API Endpoints (Placeholder URLs)
REACT_APP_COWIN_API_URL=https://cdn-api.co-vin.in/api
REACT_APP_MOHFW_API_URL=https://www.mohfw.gov.in/api
REACT_APP_ICMR_API_URL=https://api.icmr.gov.in
REACT_APP_NVBDCP_API_URL=https://nvbdcp.gov.in/api

# Application Configuration
REACT_APP_BASE_URL=https://your-domain.com
REACT_APP_CHATBOT_NAME=HealthBot
REACT_APP_SUPPORT_PHONE=104
REACT_APP_EMERGENCY_PHONE=108

# Analytics Configuration
REACT_APP_ANALYTICS_ENABLED=true
REACT_APP_ANALYTICS_RETENTION_DAYS=90

# Security Configuration
REACT_APP_ENCRYPTION_KEY=your_encryption_key_for_sensitive_data
REACT_APP_SESSION_TIMEOUT_MINUTES=30
